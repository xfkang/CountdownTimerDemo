<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape android:shape="rectangle">

            <!-- 填充的颜色 -->
            <solid android:color="@color/btn_setclock_normal"></solid>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="20px" />
            <!-- 设置框粗细、颜色 -->
            <stroke android:width="3px" android:color="#FFFFFF" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">

            <!-- 填充的颜色 -->
            <solid android:color="@color/btn_setclock_pressed" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="20px" />
            <!-- 设置框粗细、颜色 -->
            <stroke android:width="3px" android:color="#FFFFFF" />
        </shape></item>

</selector>